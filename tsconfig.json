{
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["lib/*"],
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["src", "./scripts/**/*.ts"],
  "exclude": ["node_modules", "./scripts/**/*.js"]
}